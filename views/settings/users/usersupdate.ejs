<!doctype html>
<html>
<%- include('../../partials/header', {title: 'Update a User'}); %>

<body>
    <% include ../../partials/navbar %>
    <div class="container">

        <br>
        <h1><%= title %></h1>
        <p>Update a user in the database</p>
     
        <form action="/settings/users/update" method="post">
            <input type="hidden" name="id" value="<%= data._id %>"/>
            <div class="container-fluid" style="width: 18rem;">
                <div class="form-group" col-4>
                    <label>Email</label>
                    <input required type="text" class="form-control" name="email" value="<%= data.email %>">
                </div>
                <div class="form-group" col-4>
                    <label>First Name</label>
                    <input required type="text" class="form-control" name="firstName" value="<%= data.firstName %>">
                </div>
                <div class="form-group" col-4>
                    <label>Last Name</label>
                    <input required type="text" class="form-control" name="lastName" value="<%= data.lastName %>">
                </div>
                <div class="form-group" col-4>
                    <label>Password</label>
                    <input type="password" class="form-control" name="password">
                </div>
                <div class="form-group" col-4>
                    <label>Role</label>
                    <input required type="text" class="form-control" name="role" value="<%= data.role %>">
                </div>
                <button type="submit" class="btn mt-1 btn-primary">Update</button>
            </form>
        </div>
        </div>
    </div>
    <% include ../../partials/scripts %>
</body>

</html>