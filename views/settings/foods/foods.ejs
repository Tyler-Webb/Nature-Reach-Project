<!DOCTYPE html>
<html>
<%- include('../../partials/header', {title: 'Home Page'}); %>

<body>
  <% include ../../partials/navbar %>
  <div class="container">
    <h1>Foods</h1>

    <a href="./foods/create" class="btn btn-primary">Create Food</a>

    <table id="foodTable" class="table table-bordered table-striped">

      <thead>
        <tr>
          <td>Name</td>
        </tr>
      </thead>

      <% for(var i=0; i < data.length; i++) { %>
      <tr>
        <td><%=data[i].name%></td>
      </tr>
      <% } %>
    </table>
  </div>

  <% include ../../partials/scripts %>

  <script type="text/javascript">
    $(document).ready(function () {
      $('#foodTable').DataTable();
    });
  </script>
</body>

</html>