<!DOCTYPE html>
<html>
<%- include('../../partials/header', {title: 'Home Page'}); %>

<body>
    <% include ../../partials/navbar %>
    <div class="container-fluid">
        <br>
        <h1><%= title %></h1>
        <p>Update Birds</p>
        <form method="POST" action="/settings/birds/update">
            <input type="hidden" name="id" value="<%= data._id %>"/>
            <div class="container-fluid" style="width: 18rem;">
                <div class="col" col-4>
                    <input type="text" class="form-control" placeholder="Species" name="species" value="<%= data.species %>">
                </div>
                <br>
                <div class="col" col-4>
                    <input type="text" class="form-control" placeholder="Nickname" name="nickname" value="<%= data.nickName %>">
                </div>
                <br>
                <div class="col" col-4>
                    <% if (data.enabled == true) { %>
                        <input type="checkbox" class="form-check-input" id="enabled" name="enabled" checked>
                      <% } else { %>
                        <input type="checkbox" class="form-check-input" id="enabled" name="enabled">
                      <% } %>
                    <input type="checkbox" class="form-check-input" name="enabled">
                    <label class="form-check-label">Enabled</label>
                </div>
                <div class="col" col-4>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>

            </div>
        </form>
    </div>
    <% include ../../partials/scripts %>
</body>

</html>