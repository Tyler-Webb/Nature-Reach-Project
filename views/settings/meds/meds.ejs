<!DOCTYPE html>
<html>
<%- include('../../partials/header', {title: 'Home Page'}); %>

<body>
  <% include ../../partials/navbar %>

  <div class="container-fluid">
    <div class="container">
      <h1>Medications</h1>

      <a href="./meds/create" class="btn btn-primary">Create Medication</a>

      <table id="medsTable" class="table table-bordered table-striped">

        <thead>
          <tr>
            <td>Name</td>
          </tr>
        </thead>

        <% for(var i=0; i < data.length; i++) { %>
        <tr>
          <td><%=data[i].name%></td>
        </tr>
        <% } %>
      </table>
    </div>

    <% include ../../partials/scripts %>

    <script type="text/javascript">
      $(document).ready(function () {
        $('#medsTable').DataTable();
      });
    </script>
</body>

</html>